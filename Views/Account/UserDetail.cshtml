@model UserView

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        h1{
            color: black;
        }
        .profile-container {
            display: flex;
            flex-direction: row;
            align-items: flex-start;
            justify-content: center;
            gap: 20px;
            margin-top: 50px;
            background-color: #495057;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 800px;
            height: auto;
            margin-left: auto;
            margin-right: auto;
        }
        .profile-photo {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
        }
        .profile-details {
            text-align: left;
            flex-grow: 1;
        }
        .profile-details h3 {
            font-size: 2rem;
            margin-bottom: 20px;
        }
        .profile-details p {
            font-size: 1.4rem;
            margin: 10px 0;
        }
        p{
            color: black;
        }
        body {
            background-color: #212529;
        }
        .user-details{
            color: black;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Welcome, @Model.Name @Model.Surname!</h1>

        <div class="profile-container">
            <!-- Profil Fotoğrafı -->
            <div>
                <img src="~/img/avatar.jpeg" alt="Profile Photo" class="profile-photo">
            </div>

            <!-- Kullanıcı Bilgileri -->
            <div class="profile-details">
                <h3 class="user-details">User Details</h3>
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Surname:</strong> @Model.Surname</p>
                <p><strong>Username:</strong> @Model.UserName</p>
                <p><strong>Address:</strong> 
                   @Model.Email
                </p>
                <a class="btn btn-primary" asp-controller="Account" asp-action="UserUpdate" asp-route-userId=@Model.UserId>Update</a>
                <a class="btn btn-danger" asp-controller="Account" asp-action="Delete" asp-route-userId=@Model.UserId>Delete</a>
            </div>
        </div>
    </div>
</body>
</html>
