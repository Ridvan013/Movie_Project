@{
    ViewData["Title"] = "Register";
    Layout = null; <!-- Layout olmadan tam ekran görünüm için -->
}

@model RegisterUserView

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <style>
        /* Genel Sayfa Arkaplan */
     body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    background: url('/img/2.jpg') no-repeat center center;
    background-size: contain; /* Resmi oranını koruyarak boyutlandırır */
    background-attachment: fixed; /* Kaydırma sırasında arka plan sabit kalır */
    background-position: center; /* Resmi tam ortalar */
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh; /* Sayfanın tamamını kaplar */
    background-color: black;
}

        /* Register Container */
        .register-container {
            width: 500px;
            padding: 40px;
            background-color: rgba(26, 26, 26); /* Şeffaf siyah arkaplan */
            color: #FFD700; /* Koyu sarı yazı */
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
            text-align: center;
        }

        /* Başlık */
        .register-container h2 {
            font-size: 3rem;
            margin-bottom: 30px;
        }

        /* Form Grupları */
        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-group label {
            display: block;
            font-size: 1.2rem;
            color: #FFD700;
            margin-bottom: 10px;
        }

        .form-group input {
            width: 100%;
            height: 50px;
            padding: 10px;
            font-size: 1.2rem;
            border: 1px solid #444;
            border-radius: 8px;
            background-color: #333;
            color: #FFD700;
            box-sizing: border-box;
        }

        /* Register Butonu */
        .register-button {
            width: 100%;
            height: 50px;
            margin-top: 15px;
            font-size: 1.2rem;
            color: #1a1a1a;
            background-color: #FFD700;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .register-button:hover {
            background-color: #e6c200;
            transform: scale(1.02);
        }
    </style>
</head>
<body>
    <div class="register-container">
        <h2>Register</h2>

        

        

        <form method="post" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" placeholder="Enter your Name"  />
                <span asp-validation-for="Name" style="color: orangered;"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname">Surname</label>
                <input asp-for="Surname" placeholder="Enter your Surname"  />
                <span asp-validation-for="Surname" style="color: orangered;"></span>

            </div>
            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" placeholder="Enter your username"  />
                <span asp-validation-for="Username" style="color: orangered;"></span>

            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" placeholder="Enter your email"  />
                <span asp-validation-for="Email"  style="color: orangered;"></span>

            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" placeholder="Enter your password"  />
                <span asp-validation-for="Password" style="color: orangered;"></span>

            </div>
            <button type="submit" class="register-button">Register</button>
        </form>
    </div>
</body>
</html>